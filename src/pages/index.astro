---
import Layout from '@layouts/Layout.astro';

import App from '@components/App.svelte';
---

<Layout title='Welcome to Astro.'>
  <main>
    <section class='container w-screen max-w-xl mx-auto p-8'>
      <h1>Make <span class='text-gradient'>MC</span></h1>
      <App client:idle />
    </section>
  </main>
</Layout>

<style>
  main {
    color: white;
    font-size: 24px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
